---
import Container from "@components/container.astro";
import MainLayout from "../../layouts/MainLayout.astro";
import { loadTranslations, type NotFoundTranslations } from "../../utils/i18n";

// Set current locale
const currentLocale = 'fr';

// Load translations
const translations = await loadTranslations('notFound', currentLocale) as NotFoundTranslations;
---

<MainLayout title={translations.title}>
  <Container>
    <div class="min-h-[calc(100vh-16rem)] flex items-center justify-center">
      <div class="mt-16 text-center">
        <h1 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">404</h1>
        <p class="text-lg mt-4 text-slate-600 dark:text-slate-400">{translations.message}</p>
        <div class="mt-8">
          <a href={`/${currentLocale}/`} class="bg-rose-flash hover:bg-opacity-80 text-white font-medium py-2 px-4 rounded-md transition-colors">
            {translations.button}
          </a>
        </div>
      </div>
    </div>
  </Container>
</MainLayout>
