---
import MainLayout from "../../../layouts/MainLayout.astro";
import BlogCard from "../../../components/BlogCard.astro";
import Pagination from "../../../components/Pagination.astro";
import Gradient from "../../../components/Gradient.astro";

import { getAllPosts, getTotalPages } from "../../../lib/wordpress";

// Set current locale
const currentLocale = 'fr';

const PER_PAGE = 9;
const page = 1;
const posts = await getAllPosts(page, PER_PAGE, currentLocale);
const totalPages = await getTotalPages(PER_PAGE, currentLocale);

// Import translations
const translations = await import(`../../../i18n/${currentLocale}.json`);
---
<div class="relative overflow-x-hidden supports-[overflow-x:clip]:overflow-x-clip">
  <MainLayout title={translations.default.blog.title}>
  <Gradient />
    <section class="py-16 px-4 max-w-7xl mx-auto">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl mb-4">{translations.default.blog.title}</h1>
        <p class="text-paragraph dark:text-paragraph-dark max-w-2xl mx-auto">
          Réflexions, idées et mises à jour de mon parcours en tant que développeur.
        </p>
      </div>

      {posts.length === 0 ? (
        <div class="text-center py-20">
          <h2 class="text-2xl">Aucun article trouvé</h2>
          <p class="mt-4">Veuillez revenir plus tard pour du nouveau contenu.</p>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post) => (
            <BlogCard post={post} locale={currentLocale} />
          ))}
        </div>
      )}
      
      {totalPages > 1 && 
        <Pagination 
          currentPage={page} 
          totalPages={totalPages} 
          baseUrl={`/${currentLocale}/blog/page`} 
          indexUrl={`/${currentLocale}/blog`} 
        />
      }
    </section>
  </MainLayout>
</div>
