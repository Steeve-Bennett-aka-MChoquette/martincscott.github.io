---
import { supabase } from '@/utils/supabase';

// Server-side session check
let session = null;
let ssrError = null;

if (import.meta.env.SSR) {
  try {
    const { data, error } = await supabase.auth.session();
    session = data?.session || null;
    ssrError = error || null;
  } catch (error) {
    ssrError = error;
    console.error('SSR session check error:', error);
  }
}
---

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Espace Sécurisé</title>
</head>
<body>
  <h1>Bienvenue dans l'Espace Sécurisé</h1>
  <p>Vous êtes connecté avec succès.</p>
  
  <script type="module">
    import { supabase } from '@/utils/supabase';
    
    (async () => {
      try {
        // Check session only in browser context
        if (typeof document !== "undefined") {
          const { data } = await supabase.auth.session();
          if (!data.session) {
            window.location.href = '/auth/login';
          }
        }
      } catch (error) {
        console.error('Client session check error:', error);
        window.location.href = '/auth/login';
      }
    })();
  </script>
</body>
</html>
