---
import Container from "@components/container.astro";
import MainLayout from "../../layouts/MainLayout.astro";

// Set current locale
const currentLocale = 'en';

// Import translations
const translations = await import(`../../i18n/${currentLocale}.json`);
---

<MainLayout title={translations.default.notFound.title}>
  <Container>
    <div class="min-h-[calc(100vh-16rem)] flex items-center justify-center">
      <div class="mt-16 text-center">
        <h1 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">404</h1>
        <p class="text-lg mt-4 text-slate-600 dark:text-slate-400">{translations.default.notFound.message}</p>
        <div class="mt-8">
          <a href={`/${currentLocale}/`} class="bg-rose-flash hover:bg-opacity-80 text-white font-medium py-2 px-4 rounded-md transition-colors">
            {translations.default.notFound.button}
          </a>
        </div>
      </div>
    </div>
  </Container>
</MainLayout>
