---
import MainLayout from "../../../layouts/MainLayout.astro";
import { Icon } from "astro-icon/components";
import secureTranslations from "../../../i18n/secure.json";

const currentLocale = 'en';

// Load translations
const translations = (secureTranslations[currentLocale] || secureTranslations.en).secure;
---

<MainLayout title={translations.title}>
  <div class="auth-container max-w-md mx-auto p-8">
    <h1 class="text-4xl lg:text-5xl font-bold text-heading dark:text-heading-dark mb-6">{translations.title}</h1>

    <div id="user-info" class="hidden p-6 border border-gray-200 rounded-lg bg-white dark:bg-deep-purple dark:border-rose-flash">
      <p class="text-gray-700 dark:text-gray-300">{translations.welcome}, <span id="user-email" class="font-bold text-rose-flash dark:text-rose-flash"></span>!</p>

      <div class="mt-6 space-y-3">
        <a href={`/${currentLocale}/secure/profile`} class="dashboard-link">
          <Icon name="bx:bx-user" class="w-5 h-5" />
          <span>{translations.viewProfile}</span>
        </a>
      </div>

      <button class="w-full mt-6 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 py-2 px-4 rounded transition-colors duration-200 flex items-center justify-center gap-2" id="logout-button">
        <Icon name="bx:bx-log-out" class="w-5 h-5" />
        {translations.logout}
      </button>
    </div>

    <div id="loading" class="text-center p-8">{translations.loading}</div>
  </div>

  <script>
    // This script runs in the browser
    import { supabase } from '../../../utils/supabase';
    import secureTranslations from '../../../i18n/secure.json';
    
    // Get current locale from URL
    const currentLocale = 'en';
    
    // Load translations
    const translations = (secureTranslations[currentLocale] || secureTranslations.en).secure;
    
    // Check authentication status
    async function checkAuthStatus() {
      try {
        const { data, error } = await supabase.auth.getUser();
        
        if (error || !data?.user) {
          // Redirect to login if not authenticated
          window.location.href = `/${currentLocale}/auth/login`;
          return;
        }
        
        // Show user info
        document.getElementById('user-email').textContent = data.user.email;
        document.getElementById('user-info').classList.remove('hidden');
        document.getElementById('loading').classList.add('hidden');
        
        // Handle logout
        document.getElementById('logout-button').addEventListener('click', async () => {
          try {
            const { error } = await supabase.auth.signOut();
            if (error) throw error;
            
            // Redirect to login after logout
            window.location.href = `/${currentLocale}/auth/login`;
          } catch (error) {
            alert(`${translations.logoutError}: ${error.message}`);
          }
        });
      } catch (error) {
        console.error('Auth check error:', error);
        alert(`${translations.authError}: ${error.message}`);
      }
    }
    
    // Run auth check when page loads
    checkAuthStatus();
  </script>

  <style>
    .auth-container {
      min-height: 400px;
    }

    .dashboard-link {
      @apply flex items-center gap-3 p-3 rounded-lg bg-gray-50 dark:bg-gray-800 hover:bg-rose-flash/10 dark:hover:bg-rose-flash/20 text-gray-700 dark:text-gray-300 hover:text-rose-flash dark:hover:text-rose-flash transition-colors;
    }
  </style>
</MainLayout>
