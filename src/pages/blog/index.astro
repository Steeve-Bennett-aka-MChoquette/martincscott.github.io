---
import MainLayout from "../../layouts/MainLayout.astro";
import BlogCard from "../../components/BlogCard.astro";
import Pagination from "../../components/Pagination.astro";
import { getAllPosts, getTotalPages } from "../../lib/wordpress";

const PER_PAGE = 9;
const page = 1;
const posts = await getAllPosts(page, PER_PAGE);
const totalPages = await getTotalPages(PER_PAGE);
---

<MainLayout title="Blog">
  <section class="py-16 px-4 max-w-7xl mx-auto">
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl mb-4">Blog</h1>
      <p class="text-paragraph dark:text-paragraph-dark max-w-2xl mx-auto">
        Thoughts, insights, and updates from my journey as a developer.
      </p>
    </div>

    {posts.length === 0 ? (
      <div class="text-center py-20">
        <h2 class="text-2xl">No posts found</h2>
        <p class="mt-4">Please check back later for new content.</p>
      </div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => (
          <BlogCard post={post} />
        ))}
      </div>
    )}
    
    {totalPages > 1 && 
      <Pagination 
        currentPage={page} 
        totalPages={totalPages} 
        baseUrl="/blog/page" 
        indexUrl="/blog" 
      />
    }
  </section>
</MainLayout>