---
import MainLayout from "../layouts/MainLayout.astro";
import Container from "@components/container.astro";
import Cta from "@components/cta.astro";
import Features from "@components/features.astro";
import Hero from "@components/hero.astro";
import Logos from "@components/logos.astro";
---
<div class="relative overflow-x-hidden supports-[overflow-x:clip]:overflow-x-clip">
  <MainLayout title="Martin C Scott">
      <div class="noise"></div>
        <div class="animated-gradient gradient-1 absolute left-0 top-[55rem] h-[600px] w-[calc(max(50vw,300px))] -translate-y-1/2 translate-x-[-60%] rounded-full bg-purple-purple-gradient opacity-75 mask-radial-gradient z-[-5]"></div> 
        <div class="animated-gradient gradient-2 absolute left-0 top-[35rem] h-[600px] w-[calc(max(50vw,300px))] -translate-y-1/2 translate-x-[-60%] rounded-full bg-orange-yellow-gradient opacity-75 mask-radial-gradient z-[-5]"></div>
        <div class="animated-gradient gradient-3 absolute left-0 top-[0rem] h-[600px] w-[calc(max(50vw,300px))] -translate-y-1/2 translate-x-[10%] rounded-full bg-purple-purple-gradient opacity-75 mask-radial-gradient z-[-5]"></div>
        <div class="animated-gradient gradient-4 absolute left-0 top-[0rem] h-[600px] w-[calc(max(50vw,300px))] -translate-y-1/2 translate-x-[65%] rounded-full bg-blue-purple-gradient opacity-75 mask-radial-gradient z-[-5]"></div>
        <div class="animated-gradient gradient-5 absolute right-0 top-[30rem] h-[600px] w-[calc(max(50vw,300px))] -translate-y-1/2 translate-x-[60%] rounded-full bg-orange-yellow-gradient opacity-75 mask-radial-gradient z-[-5]"></div>
        <div class="animated-gradient gradient-6 absolute right-0 top-[60rem] h-[600px] w-[calc(max(50vw,300px))] -translate-y-1/2 translate-x-[60%] rounded-full bg-blue-purple-gradient opacity-75 mask-radial-gradient z-[-5]"></div>
      <Container>
        <Hero />
        <Features />
        <Logos />
        <Cta />
      </Container>
  </MainLayout>
  </div> 
  <style>
  .bg-purple-purple-gradient {
    background-image: linear-gradient(83.21deg, #d946ef, #b845ed);
    will-change: transform;
  }
  
  .bg-orange-yellow-gradient {
    background-image: linear-gradient(266.93deg, #f0abfc, #ff7d54);
    will-change: transform;
  }
  
  .bg-blue-purple-gradient {
    background-image: linear-gradient(266.93deg, #16a4c8, #eb75d8);
    will-change: transform;
  }
  .mask-radial-gradient {
    mask-image: radial-gradient(rgba(0,0,0,.6), transparent 60%);
  }
  
  .animated-gradient {
    transform-origin: center center;
    will-change: transform;
  }
  .gradient-1 {
  animation: float-1 15s infinite ease-in-out alternate;
}

.gradient-2 {
  animation: float-2 18s infinite ease-in-out alternate;
}

.gradient-3 {
  animation: float-3 20s infinite ease-in-out alternate;
}

.gradient-4 {
  animation: float-4 25s infinite ease-in-out alternate;
}

.gradient-5 {
  animation: float-5 22s infinite ease-in-out alternate;
}

.gradient-6 {
  animation: float-6 17s infinite ease-in-out alternate;
}
@keyframes float-1 {
  0% {
    transform: translate(-60%, -50%) scale(1);
  }
  25% {
    transform: translate(-45%, -40%) scale(1.1);
  }
  50% {
    transform: translate(-50%, -60%) scale(0.95);
  }
  75% {
    transform: translate(-65%, -55%) scale(1.05);
  }
  100% {
    transform: translate(-60%, -50%) scale(1);
  }
}

@keyframes float-2 {
  0% {
    transform: translate(-60%, -50%) scale(1);
  }
  33% {
    transform: translate(-70%, -40%) scale(1.15);
  }
  66% {
    transform: translate(-50%, -65%) scale(0.9);
  }
  100% {
    transform: translate(-60%, -50%) scale(1);
  }
}

@keyframes float-3 {
  0% {
    transform: translate(10%, -50%) scale(1);
  }
  20% {
    transform: translate(25%, -35%) scale(1.1);
  }
  40% {
    transform: translate(15%, -65%) scale(0.9);
  }
  60% {
    transform: translate(0%, -45%) scale(1.2);
  }
  80% {
    transform: translate(20%, -55%) scale(0.95);
  }
  100% {
    transform: translate(10%, -50%) scale(1);
  }
}

@keyframes float-4 {
  0% {
    transform: translate(65%, -50%) scale(1);
  }
  20% {
    transform: translate(50%, -40%) scale(1.2);
  }
  40% {
    transform: translate(75%, -60%) scale(0.85);
  }
  60% {
    transform: translate(60%, -35%) scale(1.15);
  }
  80% {
    transform: translate(55%, -55%) scale(0.9);
  }
  100% {
    transform: translate(65%, -50%) scale(1);
  }
}

@keyframes float-5 {
  0% {
    transform: translate(60%, -50%) rotate(0deg) scale(1);
  }
  33% {
    transform: translate(45%, -35%) rotate(5deg) scale(1.3);
  }
  66% {
    transform: translate(70%, -60%) rotate(-5deg) scale(0.9);
  }
  100% {
    transform: translate(60%, -50%) rotate(0deg) scale(1);
  }
}

@keyframes float-6 {
  0% {
    transform: translate(60%, -50%) scale(1);
  }
  25% {
    transform: translate(80%, -40%) scale(1.15);
  }
  50% {
    transform: translate(65%, -70%) scale(0.9);
  }
  75% {
    transform: translate(50%, -35%) scale(1.2);
  }
  100% {
    transform: translate(60%, -50%) scale(1);
  }
}

  .noise-container {
    position: relative;
    min-height: 100%;
    width: 100%;
    overflow-x: visible;
    z-index: -4;
    background-color: rgba(0, 0, 0, 0)!important;
  }
  
  .noise {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background-image: url('../assets/noise.webp');
    background-repeat: repeat;
    opacity: 0.1;
    pointer-events: none;
    z-index: ;
  }
  </style>