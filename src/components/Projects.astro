---
import { getAllProjects } from "../lib/wordpress";
import { loadTranslations, type MainTranslations } from "../utils/i18n";

// Get current locale from URL
const { pathname } = Astro.url;
const currentPathSegments = pathname.split('/').filter(Boolean);
const currentLocale = currentPathSegments[0] || 'fr';

// Load translations
const translations = await loadTranslations(null, currentLocale) as MainTranslations;

// Fetch projects from WordPress API with error handling
let projects = [];
try {
  projects = await getAllProjects(1, 3, currentLocale); // Fetch first 3 projects
} catch (error) {
  console.error("Error fetching projects");
}

// Format date based on locale
function formatDate(dateString: string) {
  try {
    const locale = currentLocale === 'fr' ? 'fr-FR' : 'en-US';
    return new Date(dateString).toLocaleDateString(locale, {
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    });
  } catch (error) {
    return currentLocale === 'fr' ? "Date non disponible" : "No date available";
  }
}

// Helper function to safely get content snippet
function getContentSnippet(project) {
  // Simple approach - directly access ACF content field
  if (project?.acf?.content) {
    try {
      return project.acf.content.substring(0, 150) + '...';
    } catch (error) {
      // Silent error handling for production
    }
  }
  
  // Fallback to WordPress excerpt or content if ACF content is not available
  if (project?.excerpt?.rendered) {
    return project.excerpt.rendered.substring(0, 150) + '...';
  }
  
  if (project?.content?.rendered) {
    return project.content.rendered.substring(0, 150) + '...';
  }
  
  return "No content available";
}
---

<div class="mt-16 md:mt-0">
  <h2 class="text-center text-4xl lg:text-5xl font-bold lg:tracking-tight">
    {(translations.projects as { latestWork?: string })?.latestWork || "Our latest Work"}
  </h2>
  <p class="text-center text-lg mt-4 text-slate-600 dark:text-slate-300">
    {(translations.projects as { latestWorkSubtitle?: string })?.latestWorkSubtitle || "Discover our recent projects and the innovative solutions we've created for our clients."}
  </p>
</div>

<div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 mt-16 gap-12">
  {projects.length === 0 ? (
    <div class="col-span-3 text-center py-12">
      <p>{(translations.projects as { noProjects?: string })?.noProjects || "No projects available at the moment. Please check back later."}</p>
    </div>
  ) : (
    projects.map((project) => (
      <article class="bg-white dark:bg-gray-900 rounded-lg overflow-hidden shadow-md transition hover:shadow-lg">
        <!-- Image section -->
        {project?.acf?.image && (
          <div class="aspect-video overflow-hidden">
            <img 
              src={project.acf.image} 
              alt={project?.title?.rendered || "Project image"}
              class="w-full h-full object-cover"
            />
          </div>
        )}
        
        <!-- Content section -->
        <div class="p-6">
          <!-- Date -->
          <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">
            {project?.date ? formatDate(project.date) : "No date available"}
          </p>
          
          <!-- Title -->
          <h3 class="text-xl font-bold mb-2 line-clamp-2">
            {project?.title?.rendered || "Untitled Project"}
          </h3>
          
          <!-- Description - Using a snippet of the content -->
          <div class="text-gray-500 dark:text-gray-400 mb-4 line-clamp-3">
            <div set:html={getContentSnippet(project)} />
          </div>
          
          <!-- Read more link -->
          <a href={project?.slug ? `/${currentLocale}/projects/${project.slug}` : "#"} class="text-rose-flash hover:underline inline-flex items-center">
            {(translations.projects as { readMore?: string })?.readMore || "Read more"}
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </article>
    ))
  )}
</div>
