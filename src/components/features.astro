---
// @ts-ignore
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Software Development",
    description:
      "Experienced in both functional and OOP paradigms across Dart, Python, Java, JavaScript, and TypeScript. Focused on clean architecture and scalable solutions.",
    icon: "bx:bx-code",
  },
  {
    title: "Frontend Development",
    description:
      "React/NextJS expert with 5+ years of experience. Passionionate about UI/UX design and modern web standards using HTML, CSS, and JavaScript frameworks.",
    icon: "bx:bx-desktop",
  },
  {
    title: "Flutter Development",
    description:
      "Skilled in building cross-platform mobile applications for Android and iOS using Flutter framework with native performance and responsive design.",
    icon: "bx:bxl-flutter",
  },
  {
    title: "WordPress Expertise",
    description:
      "Full-stack WordPress developer specializing in custom themes, plugins, and headless implementations with REST API and GraphQL integration.",
    icon: "bx:bxl-wordpress",
  },
  {
    title: "Vue JS Development",
    description:
      "Proficient in Vue 3 with component-based architecture, Vuex/Pinia state management, and modern tooling like Vite and Vue Router.",
    icon: "bx:bxl-vuejs",
  },
  {
    title: "Docker & Open Source",
    description:
      "Containerization expert with Docker and Kubernetes. Active contributor to open source projects with CI/CD pipeline implementation experience.",
    icon: "bx:bxl-docker",
  },
];
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Everything you need to start a website
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Astro comes batteries included. It takes the best parts of state-of-the-art
    tools and adds its own innovations.
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-6">
  {
    features.map((item) => (
      <div class="gradient-border">
        <div class="flex gap-12 items-center self-start feature-card bg-white dark:bg-deep-purple shadow-md rounded-lg p-6">
          <div class="flex justify-center item-center mt-1 bg-black dark:bg-white rounded-full p-2 w-16 h-16 shrink-0">
            <Icon class="text-white dark:text-black text-4xl self-center" name={item.icon} />
          </div>
          <div>
            <h3 class="font-semibold text-lg">{item.title}</h3>
            <p class="text-slate-950 dark:text-paragraph-dark mt-2 leading-relaxed">{item.description}</p>
          </div>
        </div>
      </div>
    ))
  }
</div>

<style>
  /* Create a CSS-only gradient border using all 6 colors from the image */
.gradient-border {
  position: relative;
  border-radius: 0.5rem; /* 8px */
  background: #1e1e2e; /* Dark background */
  z-index: 1;
}

.gradient-border::before {
  content: "";
  position: absolute;
  top: -1.5px;
  left: -1.5px;
  right: -1.5px;
  bottom: -1.5px;
  background: linear-gradient(
    45deg,
    theme('colors.fuchsia.500'),
    theme('colors.custom-purple'),
    theme('colors.fuchsia.300'),
    theme('colors.custom-orange'),
    theme('colors.custom-cyan'),
    theme('colors.custom-pink')   
  );
  border-radius: 0.625rem; /* 10px, slightly larger than the inner element */
  z-index: -1;
}

/* Apply this class to your feature cards */
.feature-card {
  padding: 2rem;
  height: 100%;
  border-radius: 0.5rem;
}
</style>
