---
import { Picture } from "astro:assets";
import heroImage from "../assets/astro--02.webp";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<style>
  .hero-mask {
    position: relative;
    overflow: hidden;
    -webkit-mask-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200"><path fill="white" d="M38.1,-52.6C47.3,-45.4,51.5,-32.3,55.6,-18.1C59.8,-3.9,63.8,12.4,60.5,25.6C57.3,38.8,46.9,48.8,35.8,55.3C24.8,61.7,12.4,64.7,-0.2,64.9C-12.8,65.1,-25.6,62.6,-37.4,55.7C-49.2,48.8,-60,37.4,-64.8,23.4C-69.6,9.5,-68.4,-6.9,-61.9,-20.6C-55.5,-34.3,-43.8,-45.3,-30.8,-52.4C-17.8,-59.6,-8.9,-62.9,2.7,-66.1C14.3,-69.2,28.6,-72.9,38.1,-52.6Z" transform="translate(105 80) scale(1.6)" /></svg>');
    -webkit-mask-repeat: no-repeat;
    -webkit-mask-size: cover;
    mask-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200"><path fill="white" d="M38.1,-52.6C47.3,-45.4,51.5,-32.3,55.6,-18.1C59.8,-3.9,63.8,12.4,60.5,25.6C57.3,38.8,46.9,48.8,35.8,55.3C24.8,61.7,12.4,64.7,-0.2,64.9C-12.8,65.1,-25.6,62.6,-37.4,55.7C-49.2,48.8,-60,37.4,-64.8,23.4C-69.6,9.5,-68.4,-6.9,-61.9,-20.6C-55.5,-34.3,-43.8,-45.3,-30.8,-52.4C-17.8,-59.6,-8.9,-62.9,2.7,-66.1C14.3,-69.2,28.6,-72.9,38.1,-52.6Z" transform="translate(105 80) scale(1.6)" /></svg>');
    mask-repeat: no-repeat;
    mask-size: cover;
  }
  
</style>

<main class="grid lg:grid-cols-2 place-items-center pt-8 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 order-1 md:block">
    <div class="hero-mask rounded-full">
      <Picture
        src={heroImage}
        alt="Astronaut in the air"
        widths={[200, 400, 600]}
        sizes="(max-width: 800px) 100vw, 620px"
        loading="eager"
        format="avif"
      />
    </div>
  </div>
  <div>
      <h1 class="text-6xl lg:text-4xl xl:text-6xl font-bold">
        Crafting exceptional digital experiences through UX/UI innovation
      </h1>
      <p class="text-lg mt-4 text-slate-800 max-w-xl">
        Leveraging cutting-edge technologies to create intuitive digital products for startups, enterprises, and digital agencies worldwide. Expert in transforming complex challenges into elegant, user-centered solutions.
      </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        href="https://github.com/Steeve-Bennett-aka-MChoquette/martincscott.github.io/blob/main/README.md"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white dark:text-black w-5 h-5" name="bx:bxs-cloud-download" />
         Download for free
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://github.com/Steeve-Bennett-aka-MChoquette/martincscott.github.io"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black dark:text-white w-4 h-4" name="bx:bxl-github" />
         GitHub repo
      </Link>
    </div>
  </div>
</main>
